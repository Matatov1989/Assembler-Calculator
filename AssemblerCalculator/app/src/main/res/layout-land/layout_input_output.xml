<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textNums"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:ellipsize="middle"
                    android:gravity="left"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#010101"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/decRes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:clickable="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#010101"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/hexRes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:clickable="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#010101"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/octRes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#010101"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/binRes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#010101"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/decText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:clickable="true"
                        android:text=" :Dec"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#010101"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/hexText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text=" :Hex"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#010101"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/octText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text=" :Oct"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#010101"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/binText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text=" :Bin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#010101"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btnHex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/all_nums_sings"
                        android:onClick="onClickHex"
                        android:text="Hex"
                        android:textColor="@color/colorGray" />

                    <Button
                        android:id="@+id/btnDec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/all_nums_sings"
                        android:onClick="onClickDex"
                        android:text="Dec"
                        android:textColor="@color/colorGray" />

                    <Button
                        android:id="@+id/btnBin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/all_nums_sings"
                        android:onClick="onClickBin"
                        android:text="Bin"
                        android:textColor="@color/colorGray" />

                    <Button
                        android:id="@+id/btnOct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="3"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/all_nums_sings"
                        android:onClick="onClickOct"
                        android:text="Oct"
                        android:textColor="@color/colorGray" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/all_nums_sings"
                        android:onClick="onClickPlus"
                        android:text="+"
                        android:textColor="@color/colorGold" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/all_nums_sings"
                        android:onClick="onClickMinus"
                        android:text="-"
                        android:textColor="@color/colorGold" />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/all_nums_sings"
                        android:onClick="onClickMul"
                        android:text="*"
                        android:textColor="@color/colorGold" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="3"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/all_nums_sings"
                        android:onClick="onClickDiv"
                        android:text="/"
                        android:textColor="@color/colorGold" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/big"
                    android:onClick="onClickEqual"
                    android:text="="
                    android:textColor="@color/colorGold" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/big"
                    android:text="C"
                    android:textColor="@color/colorRed" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>