<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="180dp"
    tools:context="com.yurka.sergeant_matatov.assemblercalculator.MainActivity">

    <SlidingDrawer
        android:id="@+id/drawerSliding"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/handle"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_sliding_panel_left" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#55000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btnXor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_nums_sings"
                android:onClick="onClickXor"
                android:text="XOR"
                android:textColor="@color/colorGold" />

            <Button
                android:id="@+id/btnOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_nums_sings"
                android:text="OR"
                android:textColor="@color/colorGold" />

            <Button
                android:id="@+id/btnAnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_nums_sings"
                android:text="AND"
                android:textColor="@color/colorGold" />

            <Button
                android:id="@+id/btnNot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/all_nums_sings"
                android:text="NOT"
                android:textColor="@color/colorGold" />

        </LinearLayout>
    </SlidingDrawer>
</LinearLayout>
